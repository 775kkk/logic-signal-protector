<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- JSON logs to stdout.
         Micrometer Tracing puts traceId/spanId into MDC (keys: traceId, spanId),
         and LogstashEncoder includes MDC by default. -->

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeMdc>true</includeMdc>
            <customFields>{"service":"${spring.application.name:-api-gateway-service}"}</customFields>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
