JWT_SECRET=dev-only-change-me-dev-only-change-me
JWT_ISSUER=lsp-api-gateway
INTERNAL_API_TOKEN=dev-internal-token-change-me

# (шаг 1.3) Telegram: токен нужен только для реальной отправки сообщений через Bot API.
TELEGRAM_BOT_TOKEN=
# (опционально) secret token для webhook (header X-Telegram-Bot-Api-Secret-Token)
TELEGRAM_WEBHOOK_SECRET_TOKEN=

# (шаг 1.3) Telegram (опционально): локальный long-polling вместо webhook
TELEGRAM_POLLING_ENABLED=false
TELEGRAM_POLLING_DELAY_MS=2000
TELEGRAM_POLLING_TIMEOUT_SECONDS=20

# (шаг 1.5) Dev console
DEV_CONSOLE_ENABLED=false
DEV_CONSOLE_USER_IDS=1,2,3

# (шаг 1.5) Command switches + подтверждения
COMMAND_SWITCH_CACHE_TTL=PT10S
CHAT_STATE_TTL=PT10M
CHAT_HARD_DELETE_CONFIRM_TTL=PT60S

# (шаг 1.4) dev-backdoor входа в админ-панель + лимитер
DEV_ADMIN_CODE_ENABLED=false
DEV_ADMIN_CODE=some-secret-code
DEV_ADMINLOGIN_RATE_WINDOW=PT10M
DEV_ADMINLOGIN_RATE_MAX_ATTEMPTS=5

# Optional overrides (обычно можно не трогать, т.к. в application.yml есть дефолты)
GATEWAY_INTERNAL_BASE_URL=http://localhost:8086
LOGIC_COMMANDS_CENTER_BASE_URL=http://localhost:8085
MARKET_DATA_BASE_URL=http://localhost:8081
ALERTS_BASE_URL=http://localhost:8082
BROKER_BASE_URL=http://localhost:8083

# Optional infra overrides
REDIS_HOST=localhost
REDIS_PORT=6379
